{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('admin_user_index') }}">{% trans %}Back{% endtrans %}</a>
    <hr>
    <h1>
        {{ user.displayName|upper }}
        <a href="{{ path('admin_user_edit', { user: user.id }) }}" class="fas fa-edit"></a>
    </h1>

    <table class="table">
        <tbody>
        <tr>
            <th>{% trans %}Firstname{% endtrans %}</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>{% trans %}Email{% endtrans %}</th>
            <td>{{ user.email }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-10">
            <h4>{% trans %}Favorite post{% endtrans %}</h4>
            {% for favorite in favorites %}
                <li class="list-group-item">
                    <a href="{{ path('post_show', { post: favorite['slug'] }) }}">   {{ favorite['title'] }}</a>
                </li>
            {% endfor %}
        </div>
    </div>

{% endblock %}