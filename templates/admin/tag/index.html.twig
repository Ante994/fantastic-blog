{% extends 'base.html.twig' %}

{% block title %}{% trans %}Tags{% endtrans %}{% endblock %}

{% block body %}
    <a href="{{ path('admin_index') }}">{% trans %}Back{% endtrans %}</a>
    <hr>
    <h2>{% trans %}Tags{% endtrans %}</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>{% trans %}Tag{% endtrans %}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a href="{{ path('admin_tag_show',{'tag':tag.id} )}}" class="fas fa-hand-point-up"></a>
                    <a href="{{ path('admin_tag_edit',{'tag':tag.id} )}}" class="fas fa-edit"></a>
                    <a href="{{ path('admin_tag_delete',{'tag':tag.id} )}}" class="fas fa-trash"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_tag_new') }}">{% trans %}New tag{% endtrans %}</a>
{% endblock %}
