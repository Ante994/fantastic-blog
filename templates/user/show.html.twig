{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {{ user.displayName|upper }}
        <a href="{{ path('user_edit', { user: user.id }) }}" class="fas fa-edit"></a>

            <span class="fa fa-pencil"></span>
        </a>
    </h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-md-10">
            <h4>Favorite posts</h4>
            {% for favorite in favorites %}
                <li class="list-group-item">
                    <a href="{{ path('post_show', { post: favorite['slug'] }) }}">   {{ favorite['title'] }}</a>
                </li>
            {% endfor %}
        </div>
    </div>

{% endblock %}