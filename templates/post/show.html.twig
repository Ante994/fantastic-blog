{% extends 'base.html.twig' %}

{% block body %}
        <a class="btn btn-default" href="{{ path('post_index') }}">Back</a>
        <hr>
        <h2>{{ post.title }} </h2>
        <ul class="list-group">
            <li class="list-group-item">
                {{ post.author.displayName|capitalize }}
                {{ post.dateCreated|date('d.m.Y') }}
                {% for tag in post.tags %}
                    <p>{{ tag.name }}</p>
                {% endfor %}
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-10">
                    <span class="post-likes">
                        <a href="{{ path('ajax_like', { slug: post.slug}) }}" class="fas fa-sign-language js-like-article"> Clap It!</a>
                        <span class="js-like-article-count"> ({{ totalLikes }})</span>
                    </span>
                    <span>
                        <a class="fas fa-comments"> ({{ post.comments|length }}) </a>
                    </span>
                    <span class="post-favorite">
                        {% if favorited %}
                            <a href="{{ path('ajax_favorite', { slug: post.slug}) }}" class="fas fa-star unfavorite js-post-favorite">Remove from favorite</a>
                        {% else %}
                            <a href="{{ path('ajax_favorite', { slug: post.slug}) }}" class="fas fa-star favorite js-post-favorite">Add to favorite</a>
                        {% endif %}
                    </span>
                        <style>
                            a.fas.fa-star.unfavorite{
                                color: red;
                            }

                            a.fas.fa-star.unfavorite:hover {
                                color: grey;
                            }

                            a.fas.fa-star.favorite {
                                color: grey;
                            }

                            a.fas.fa-star.favorite:hover {
                                color: red;
                            }
                        </style>

                        </div>
                    <div class="col-md-2">
                        <span>
                            <a href="{{ path('post_delete', { post: post.id }) }}" class="fas fa-trash"></a>
                            | <a href="{{ path('post_edit', { post: post.id }) }}" class="fas fa-edit"></a>
                        </span>
                    </div>
                </div>
            </li>
        </ul>
        <br>
        <p>{{ post.postDetail.content }}</p>


    <div id="post-comments">
        {% include 'comment/_form.html.twig' %}
        <div id="post-comments-body">
            {% for comment in post.comments|reverse %}
                <li class="list-group-item">
                    <p>{{ comment.content }} - {{ comment.author.displayName }} - {{ comment.created|date('j.m.Y G:i') }}</p>
                </li>
            {% endfor %}
        </div>
    </div>


{% endblock %}


{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $(".fa-comments").click(function() {
                $('html,body').animate({
                        scrollTop: $("#post-comments").offset().top},
                    'slow');
            });

            $(function() {
                $('#post-comments').on('click', ".comment-submit", function (e) {
                    e.preventDefault();
                    var data = {
                        content: $('#comment_content').val(),
                        post: {{ post.id }}
                    };
                    console.log(data)
                    $.ajax({
                        type: "POST",
                        dataType: "json",
                        data: data,
                        url: '{{ path('ajax_comment') }}',
                    }).done(function (data) {
                        $('#post-comments-body').prepend('<li class="list-group-item">'
                            + data['comment'] + '-' + data['author'] + data['created'] +
                            '</li>');
                        $('#comment_content').val('');
                    });

                });

                $('.post-likes').on('click', ".js-like-article", function (e) {
                    e.preventDefault();
                    var data = {
                        post: {{ post.id }}
                    };

                    var $link = $(e.currentTarget);
                    $link.toggleClass('fa-heart-o').toggleClass('fa-heart');
                    console.log($link)

                    $.ajax({
                        type: "POST",
                        dataType: "json",
                        data: data,
                        url: '{{ path('ajax_like') }}',
                    }).done(function (data) {
                        console.log(data.likes)
                        $('.js-like-article-count').html('('+data.likes+')');
                    });
                });

                $('.post-favorite').on('click', ".js-post-favorite", function (e) {
                    e.preventDefault();
                    var data = {
                        post: {{ post.id }}
                    };

                    var $link = $(e.currentTarget);
                    console.log($link)

                    $.ajax({
                        type: "POST",
                        dataType: "json",
                        data: data,
                        url: '{{ path('ajax_favorite') }}',
                    }).done(function (data) {
                        console.log(data)
                        if (data.favorited === true) {
                            $('.post-favorite').append('<a href="{{ path('ajax_favorite', { slug: post.slug}) }}" class="fas fa-star unfavorite js-post-favorite">Remove from favorite</a>');
                            $('.fas.fa-star.favorite').hide();
                        } else {
                            $('.post-favorite').append('<a href="{{ path('ajax_favorite', { slug: post.slug}) }}" class="fas fa-star favorite js-post-favorite">Add to favorites</a>');
                            $('.fas.fa-star.unfavorite').hide();
                        }
                    });
                });

            });
        });


    </script>

{% endblock %}
