{% extends 'base.html.twig' %}

{% block body %}
        <a class="btn btn-default" href="{{ path('post_index') }}">Back</a>
        <hr>
        <h2>{{ post.title }} </h2>
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col-md-9">
                     {{ post.author.displayName|capitalize }}
                     {{ post.dateCreated|date('d.m.Y') }}
                    <span class="pl-2 article-details">
                        <span class="js-like-article-count"></span>
                        <a href="" class="fa fa-heart-o like-article js-like-article"></a>
                    </span>
                    <span>
                       <a class="fa fa-comment-o"> 0 </a>
                    </span>
                        </div>
                    <div class="col-md-3">
                        <span>
                            <a href="{{ path('post_delete', { post: post.id }) }}" class="fa fa-remove">Delete</a>
                            | <a href="{{ path('post_edit', { post: post.id }) }}" class="fa fa-edit"> Edit </a>
                        </span>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                 {% for tag in post.tags %}
                    <p>{{ tag }}</p>
                     {%  dump(tag.name) %}
                 {% endfor %}
            </li>
        </ul>
        <br>
        <p>{{ post.postDetail.content }}</p>

        {% include 'comment/_form.html.twig' %}

{% endblock %}