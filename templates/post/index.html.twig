{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Posts</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.dateCreated|date('F j, Y, g:i a')}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}