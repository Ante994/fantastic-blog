{% extends 'base.html.twig' %}

{% block body %}
    {% include('post/index_paginate.html.twig') %}
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $(function() {
                $('#post-container').on('click', ".pagination span a", function (e) {
                    e.preventDefault();
                    $.ajax({
                        type: "GET",
                        url: '{{ path('ajax_index') }}' + $(this).attr('href'),
                    }).done(function (data) {
                        $('#post-container').html(data);
                    });

                });
            });
        });
    </script>
{% endblock %}
