{% extends 'base.html.twig' %}

{% block body %}
    {% include('post/index_paginate.html.twig') %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $(function() {
                $('#post-container').on('click', ".pagination span a", function (e) {
                    e.preventDefault();
                    $.ajax({
                        type: "GET",
                        url: '{{ path('ajax_index') }}' + $(this).attr('href'),
                    }).done(function (data) {
                        $('#post-container').html(data);
                    });

                });
            });
        });
    </script>

{% endblock %}
